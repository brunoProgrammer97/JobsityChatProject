@page
@model JobsityChatProject.Pages.Account.HomeModel
@{ 
}

<div class="text-center">
    <div class="container col-6">
        <div class="form-group">
            <label for="user">Hello</label>
            <label for="message">Please Type Your Message</label>
            <textarea class="form-control" id="message" rows="2"></textarea>
        </div>
        <input type="button" class="btn btn-primary" id="send" value="Send Message" />
        <form method="post">
            <br />
            <button class="btn btn-primary">
            Logout</button>
        </form>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="container col-6">
        <ul class="list-group" id="messagesList">
            @foreach (var message in Model.ChatMessages)
            {
                <li>@message.User : @message.Message</li>
            }
        </ul>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/aspnet-signalr/1.1.4/signalr.min.js'></script>
    <script src='~/js/general-chat.js'></script>
</div>