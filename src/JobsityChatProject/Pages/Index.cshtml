@page
@model IndexModel
@{
    ViewData["Title"] = "Login Chat Page";
}

<div class="container border" style="padding:32px">
    <form method="post">
        <div class="form-group row">
            <div class="col-3">
                <label>User Name</label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="UserLoginViewModel.UserName" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Password</label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="UserLoginViewModel.Password" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col-5">
                <a href="Account/Register">Register User</a>
            </div>
        </div>
    </form>
</div>
